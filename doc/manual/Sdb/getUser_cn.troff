      "User": "myuser",
      "Roles": [
          "_foo.read"
      ],
      "Options": {},
      "InheritedRoles": [
          "_foo.read"
      ],
      "InheritedPrivileges": [
          {
          "Resource": {
              "cs": "foo",
              "cl": ""
          },
          "Actions": [
              "find",
              "getDetail"
          ]
          }
